structure Main = struct
  fun main (name, arguments) =
        let
          val fileName = hd arguments
          val files = Pkzip.openIn fileName
        in
          List.app (fn {fileName, ...} => print (fileName ^ "\n")) files;
          OS.Process.success
        end
end

